---
import {site} from "../consts";
const {title, date, url} = Astro.props;
import {t} from '../i18n/utils'
import {formatDate} from "../utils/formatDate.js";
import getUrl from "../utils/getUrl";
---

<div class="border-l-4 my-4 p-4 border-l-skin-base bg-skin-card break-all">
  {title ?
    <div>{t('footer.articleTitle')}：{title}</div> : ''}
  {
    site.author ?
      <div>{t('footer.articleAuthor')}：{site.author}</div> : ''
  }

  {
    date ?
      <div>{t('footer.releaseTime')}：{formatDate(date)}</div> : ''
  }
  {
    site.url?   <div>
      {t('footer.originalLink')}：<a href={site.url + getUrl('/') + url} class="hover:text-skin-active">{site.url + getUrl('/') + url}</a>
    </div>: ''
  }
</div>
